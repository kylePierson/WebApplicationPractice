@model BlueChipTSA.Models.Campground

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string imageSrc = "/Content/img/" + Model.Name + ".gif";
}

<div class="container">
    <h2>About @Model.Name</h2>
    <div class="row">
        <div class="panel panel-default col-md-6 col-md-offset-3">
            <div class="panel-heading">Location</div>
            <div class="panel-body">@Model.Location</div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default col-md-6 col-md-offset-3">
            <div class="panel-heading">Amenities</div>
            <div class="panel-body">
                <b>Utility Hookup:</b><p> @Model.UtilityHookup</p>
                <b>Dump Station:</b><p> @Model.DumpStation</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default col-md-6 col-md-offset-3">
            <div class="panel-heading">Map</div>
            <div class="panel-body">
                <img class="img-responsive" src="@imageSrc" />
            </div>
        </div>
    </div>
</div>

