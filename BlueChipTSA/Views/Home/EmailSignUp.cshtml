@model BlueChipTSA.Models.NewEmail

@{
    ViewBag.Title = "Email SignUp";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4 panel panel-default">
            <div class="panel-heading">Sign Up for Our Newletter</div>
            <div class="panel-body">
                @using(Html.BeginForm("EmailSignUp","Home", FormMethod.Post))
                {
                    @Html.LabelFor(m=>m.FirstName)<br />
                    @Html.TextBoxFor(m=>m.FirstName)
                    @Html.ValidationMessageFor(m=>m.FirstName)
                    <br /><br />
                    @Html.LabelFor(m => m.LastName)<br />
                    @Html.TextBoxFor(m => m.LastName)
                    @Html.ValidationMessageFor(m => m.LastName)
                    <br /><br />
                    @Html.LabelFor(m => m.EmailAddress)<br />
                    @Html.TextBoxFor(m => m.EmailAddress)
                    @Html.ValidationMessageFor(m => m.EmailAddress)
                    <br /><br />
                    @Html.TextBoxFor(m=>m.PhoneNumber)

                    @Html.TextBoxFor(m=>m.Address)

                    <button class="btn-primary">Submit</button>
                }
            </div>
        </div>
    </div>
</div>

